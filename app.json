{
  "expo": {
    "name": "AppTech",
    "slug": "AppTech",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "apptech",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
			"supportsTablet": true,
			"config": {
				"usesNonExemptEncryption": false
			},
			"splash": {
				"image": "./assets/images/splash-icon.png",
				"resizeMode": "cover",
				"backgroundColor": "#ffffff",
        "imageWidth": 200,
				"text": {
					"text": "AppTech",
					"color": "#000000",
					"fontSize": 24,
					"fontWeight": "bold"
				},
				"dark": {
					"backgroundColor": "#000000",
					"resizeMode": "cover",
					"image": "./assets/images/splash-dark.png",
					"text": {
						"text": "AppTech",
						"color": "#000000",
						"fontSize": 24,
						"fontWeight": "bold"
					}
				}
			}
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/adaptive-icon.png"
			},
			"splash": {
				"image": "./assets/images/splash-icon.png",
				"resizeMode": "cover",
				"imageWidth": 200,
				"backgroundColor": "#ffffff",
				"text": {
					"text": "AppTech",
					"color": "#000000",
					"fontSize": 24,
					"fontWeight": "bold"
				},
				"dark": {
					"backgroundColor": "#000000",
					"resizeMode": "cover",
					"image": "./assets/images/splash-dark.png",
					"text": {
						"text": "AppTech",
						"color": "#000000",
						"fontSize": 24,
						"fontWeight": "bold"
					}
				}
			}
		},
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-splash-screen"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
